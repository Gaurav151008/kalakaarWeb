<%- include('../header.ejs') %>
<div class="profile-container">
  <div class="profile-header">
    <div class="profile-pic">
      <img src="/public/imgs/img.jpg" alt="Profile Picture" />
    </div>
    <div class="profile-info">
      <div class="profile-name">
        <div>
          <h1>Alex Ferguson</h1>
          <div style="color: #fff; font-size: 20px; text-decoration: underline">
            Dancer
          </div>
        </div>
        <div class="dropdown">
          <button
            class="btn btn-secondary"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
            style="
              background-color: transparent;
              border: 0px;
              justify-content: center;
              align-items: center;
            "
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              fill="currentColor"
              class="bi bi-three-dots-vertical"
              viewBox="0 0 16 16"
              style="color: #ff4500"
            >
              <path
                d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0"
              />
            </svg>
          </button>
          <ul
            class="dropdown-menu"
            style="
              background-color: #f4c5b3;
              --bs-dropdown-link-active-bg: none;
              --bs-dropdown-link-active-color: none;
              --bs-dropdown-link-hover-bg: none;
              --bs-dropdown-link-hover-color: #fff;
            "
          >
            <li><a class="dropdown-item" href="#">Edit Profile</a></li>
            <li>
              <button
                class="dropdown-item"
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#staticBackdrop"
              >
                Add Post
              </button>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="#">Sign out</a></li>
          </ul>
        </div>
      </div>
      <div class="profile-stats">
        <div>
          <strong style="color: #fff">Location :</strong>
          <span style="color: #ffa888">Vadodara</span>
        </div>
        <div>
          <strong style="color: #fff">Budjet :</strong>
          <span style="color: #ffa888">1200/-</span>
        </div>
      </div>
      <div class="profile-bio">
        <p>
          Lorem ipsum dolor sit, amet consectetur adipisicing elit. In dolores
          rem, saepe explicabo, blanditiis quae deleniti necessitatibus minus
          animi sequi dignissimos autem eius inventore sunt aperiam quas aliquam
          recusandae beatae?
        </p>
      </div>
    </div>
  </div>
  <div class="achievements">
    <h2>My Personal Achievements</h2>
    <p style="color: #fff; margin-top: 50px">
      Lorem ipsum dolor, sit amet consectetur adipisicing elit. Aut similique,
      alias veniam ex autem rem obcaecati, ea tenetur quam recusandae ducimus
      non at? Natus consequatur maiores eveniet id est.
    </p>
  </div>
  <h2 style="color: #ff4500; margin-top: 10px; padding: 20px">POSTS</h2>
  <div class="profile-posts">
    <div class="post">
      <video controls>
        <source src="<%= artist.profilevideo %>" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>
</div>

<!-- Add post modal -->

<div
  class="modal fade"
  id="staticBackdrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h1 class="modal-title fs-5 color-orange" id="staticBackdropLabel">
          Add Post
        </h1>
        <button
          type="button"
          class="btn-close bg-danger"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div
        class="modal-body justify-content-center d-flex align-items-center full-height"
      >
        <form class="file-upload-form">
          <label for="file" class="file-upload-label">
            <div class="file-upload-design">
              <svg
                width="150"
                height="150"
                viewBox="0 0 24.00 24.00"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                stroke=""
                stroke-width="0.00024000000000000003"
              >
                <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                <g
                  id="SVGRepo_tracerCarrier"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></g>
                <g id="SVGRepo_iconCarrier">
                  <path
                    opacity="0.5"
                    d="M2 6.94975C2 6.06722 2 5.62595 2.06935 5.25839C2.37464 3.64031 3.64031 2.37464 5.25839 2.06935C5.62595 2 6.06722 2 6.94975 2C7.33642 2 7.52976 2 7.71557 2.01738C8.51665 2.09229 9.27652 2.40704 9.89594 2.92051C10.0396 3.03961 10.1763 3.17633 10.4497 3.44975L11 4C11.8158 4.81578 12.2237 5.22367 12.7121 5.49543C12.9804 5.64471 13.2651 5.7626 13.5604 5.84678C14.0979 6 14.6747 6 15.8284 6H16.2021C18.8345 6 20.1506 6 21.0062 6.76946C21.0849 6.84024 21.1598 6.91514 21.2305 6.99383C22 7.84935 22 9.16554 22 11.7979V14C22 17.7712 22 19.6569 20.8284 20.8284C19.6569 22 17.7712 22 14 22H10C6.22876 22 4.34315 22 3.17157 20.8284C2 19.6569 2 17.7712 2 14V6.94975Z"
                    fill="#ff4500"
                  ></path>
                  <path
                    d="M20 6.23751C19.9992 5.94016 19.9949 5.76263 19.9746 5.60842C19.7974 4.26222 18.7381 3.2029 17.3919 3.02567C17.1969 3 16.9647 3 16.5003 3H9.98828C10.1042 3.10392 10.2347 3.23445 10.45 3.44975L11.0003 4C11.8161 4.81578 12.2239 5.22367 12.7124 5.49543C12.9807 5.64471 13.2653 5.7626 13.5606 5.84678C14.0982 6 14.675 6 15.8287 6H16.2024C17.9814 6 19.1593 6 20 6.23751Z"
                    fill="#ff4500"
                  ></path>
                  <path
                    fill-rule="evenodd"
                    clip-rule="evenodd"
                    d="M12.25 10C12.25 9.58579 12.5858 9.25 13 9.25H18C18.4142 9.25 18.75 9.58579 18.75 10C18.75 10.4142 18.4142 10.75 18 10.75H13C12.5858 10.75 12.25 10.4142 12.25 10Z"
                    fill="#ff4500"
                  ></path>
                </g>
              </svg>
              <p>Drag and Drop</p>
              <span class="browse-button">Browse file</span>
            </div>
            <input id="file" type="file" />
          </label>
        </form>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div> -->
    </div>
  </div>
</div>

